<h1>Login</h1>

<%= form_tag '/login' do %>

<table class="table ">
  <thead>
  <tr>
    <th colspan="2"></th>
    <th></th>
  </tr>
</thead>
<tbody>

  <tr>
    <td>Email:<td>
    <td><%= text_field_tag :email %><td>
  </tr>
  <tr>
    <td>Password:<td>
    <td><%= password_field_tag :password %><td>
  </tr>

</tbody>
</table>
  
<div class="signup_submit_btn">
  <%= submit_tag "Submit" %>
</div>

<% end %>